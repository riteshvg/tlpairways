{
  "name": "tlpairways",
  "version": "1.0.0",
  "description": "TLAirways - Premium Air Travel Experience",
  "scripts": {
    "install:backend": "npm install --production --prefix backend",
    "install:frontend": "npm install --prefix frontend",
    "build:frontend": "npm run build:production --prefix frontend",
    "start:backend": "npm start --prefix backend",
    "install:all": "npm run install:backend && npm run install:frontend",
    "build": "npm run build:frontend",
    "start": "npm run start:backend",
    "render-build": "npm run install:all && npm run build",
    "railway-build": "npm run install:all && npm run build",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:chrome": "cypress run --browser chrome",
    "test:e2e:firefox": "cypress run --browser firefox",
    "test:e2e:headed": "cypress run --headed",
    "test:booking": "cypress run --spec 'cypress/e2e/booking-flow/**'",
    "test:datalayer": "cypress run --spec 'cypress/e2e/data-layer/**'",
    "cypress:install": "npm install --save-dev cypress @testing-library/cypress"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.1.0",
    "cypress": "^13.17.0"
  }
}
