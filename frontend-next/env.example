# Auth0 Configuration for Next.js
# Copy from your SPA .env file

# Auth0 Domain (e.g., dev-q6p3jrm5pbykuq23.us.auth0.com)
AUTH0_ISSUER_BASE_URL=https://dev-q6p3jrm5pbykuq23.us.auth0.com

# Auth0 Client ID
AUTH0_CLIENT_ID=your_client_id_here

# Auth0 Client Secret (get from Auth0 dashboard)
AUTH0_CLIENT_SECRET=your_client_secret_here

# Base URL (where your Next.js app runs)
AUTH0_BASE_URL=http://localhost:3000

# Secret for encrypting session cookie (generate with: openssl rand -hex 32)
AUTH0_SECRET=your_random_secret_here_use_openssl_rand_hex_32

# Optional: Auth0 Audience
AUTH0_AUDIENCE=your_audience_here

# Optional: Scope
AUTH0_SCOPE=openid profile email
